{
  "description": "Ergatis component naming conventions and analysis",
  "rules": {
    "primary_name": "Defined by filename or id attribute, NOT the <name> XML element (which is free-text display name)",
    "valid_chars": "[a-z_\\.\\-0-9]",
    "regex": "^[a-z_\\.\\-0-9]+$",
    "special_prefixes": "Names starting with [_.] are considered special naming",
    "type_suffix": "/.\\.(\\S+)$/ where $1 matches an informal limited set of extensions (bsml, xml, raw, txt, ...) treated like MIME types for file type determination",
    "convention_era": "Established during TIGR/JCVI 'Golden Age' development — developers agreed on lower_case_format"
  },
