{
  "name": "glimmerHMM",
  "classification": "feature prediction / genes",
  "description": "none",
  "tool_execution": [
    {
      "name": "glimmerHMM",
      "executable": "{{GLIMMERHMM_EXEC}}"
    },
    {
      "name": "dtd validation",
      "executable": "{{BIN_DIR}}/dtdValid.pl"
    }
  ],
  "converters": {
    "main": [],
    "iterator": [
      {
        "script": "glimmerHMM2bsml",
        "name": "glimmerHMM2bsml",
        "input": "{{OUTPUT_DIRECTORY}}/{{ITERATOR_NAME}}/g{{GROUP_NUMBER}}/{{I_FILE_BASE}}.glimmerHMM.raw",
        "output": "{{OUTPUT_DIRECTORY}}/{{ITERATOR_NAME}}/g{{GROUP_NUMBER}}/{{I_FILE_BASE}}.glimmerHMM.bsml"
      },
      {
        "script": "analysis2bsml",
        "name": "store config params",
        "input": null,
        "output": null
      }
    ]
  },
  "input_modes": {
    "file": false,
    "list": false,
    "directory": false
  },
  "output_formats": [
    "bsml_output_list",
    "raw_output_list"
  ],
  "has_iterator": true,
  "group_count": "150",
  "parameters": [
    {
      "name": "TRAINING_DIRECTORY",
      "default": "/local/devel/ANNOTATION/GlimmerHMM/trained_dir"
    }
  ]
}