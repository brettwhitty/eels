{
  "name": "bwa",
  "classification": "alignment",
  "description": "BWA aligner",
  "tool_execution": [
    {
      "name": "create output directory",
      "executable": "mkdir"
    },
    {
      "name": "create temp directory",
      "executable": "mkdir"
    },
    {
      "name": "BWA Execution",
      "executable": "{{BIN_DIR}}/bwa_wrapper"
    }
  ],
  "converters": {
    "main": [],
    "iterator": []
  },
  "input_modes": {
    "file": false,
    "list": false,
    "directory": false
  },
  "output_formats": [
    "bam_output_list"
  ],
  "has_iterator": true,
  "group_count": "150",
  "parameters": [
    {
      "name": "MISMATCH_PENALTY",
      "default": "3"
    },
    {
      "name": "MAX_GAP_OPENS",
      "default": "1"
    },
    {
      "name": "MAX_GAP_EXTNS",
      "default": "-1"
    },
    {
      "name": "GAP_OPEN_PENALTY",
      "default": "11"
    },
    {
      "name": "GAP_EXTN_PENALTY",
      "default": "4"
    },
    {
      "name": "MAX_THREADS",
      "default": "1"
    },
    {
      "name": "MAX_ALIGN",
      "default": "1"
    },
    {
      "name": "CLEANUP",
      "default": "1"
    },
    {
      "name": "INDEX_BAM",
      "default": "1"
    },
    {
      "name": "QUERY_INPUT_LIST",
      "default": ""
    }
  ]
}