{
  "name": "soapdenovo",
  "classification": "assembly",
  "description": "novel short-read assembly method that builds denovo draft assembly for large genomes.",
  "tool_execution": [
    {
      "name": "create output directory",
      "executable": "mkdir"
    },
    {
      "name": "soapdenovo",
      "executable": "$;BIN_DIR$;/soapdenovo"
    }
  ],
  "converters": {
    "main": [],
    "iterator": []
  },
  "input_modes": {
    "file": false,
    "list": false,
    "directory": false
  },
  "output_formats": [
    "output_list"
  ],
  "has_iterator": true,
  "group_count": "150",
  "parameters": [
    {
      "name": "SOAPDENOVO_BIN",
      "default": "$;SOAPDENOVO_EXEC$;"
    },
    {
      "name": "PROCESS",
      "default": "all"
    },
    {
      "name": "KMER_SIZE",
      "default": "23"
    },
    {
      "name": "OUTPUT_PREFIX",
      "default": "output"
    },
    {
      "name": "OTHER_ARGS",
      "default": "-R -M 3 -d 1"
    }
  ]
}