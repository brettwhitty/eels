{
  "name": "lgt_bwa",
  "classification": "LGT",
  "description": "Lateral Genome Transfer",
  "tool_execution": [
    {
      "name": "create output directory",
      "executable": "mkdir"
    },
    {
      "name": "create temp directory",
      "executable": "mkdir"
    },
    {
      "name": "BWA alignment",
      "executable": "{{BIN_DIR}}/lgt_bwa"
    },
    {
      "name": "Filter reads",
      "executable": "{{BIN_DIR}}/lgt_filter_reads"
    }
  ],
  "converters": {
    "main": [],
    "iterator": []
  },
  "input_modes": {
    "file": false,
    "list": false,
    "directory": false
  },
  "output_formats": [
    "bam_output_list"
  ],
  "has_iterator": true,
  "group_count": "150",
  "parameters": [
    {
      "name": "QUERY_FILE",
      "default": ""
    },
    {
      "name": "USE_MEM",
      "default": "0"
    },
    {
      "name": "MISMATCH_PENALTY",
      "default": "3"
    },
    {
      "name": "MAX_GAP_OPENS",
      "default": "1"
    },
    {
      "name": "MAX_GAP_EXTNS",
      "default": "-1"
    },
    {
      "name": "GAP_OPEN_PENALTY",
      "default": "11"
    },
    {
      "name": "GAP_EXTN_PENALTY",
      "default": "4"
    },
    {
      "name": "MAX_THREADS",
      "default": "1"
    },
    {
      "name": "MAX_ALIGN",
      "default": "1"
    },
    {
      "name": "SOFTCLIP_MIN",
      "default": "24"
    },
    {
      "name": "KEEP_MM",
      "default": "1"
    },
    {
      "name": "PAIRED",
      "default": ""
    },
    {
      "name": "BWA_ARGS",
      "default": ""
    },
    {
      "name": "SAM_VIEW_ARGS",
      "default": ""
    },
    {
      "name": "SAM_SORT_ARGS",
      "default": ""
    }
  ]
}