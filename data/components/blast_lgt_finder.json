{
  "name": "blast_lgt_finder",
  "classification": "LGT",
  "description": "Take best blast hits and find LGT for the given donor/host lineages",
  "tool_execution": [
    {
      "name": "Filter BLAST for best hits",
      "executable": "{{BIN_DIR}}/filter_lgt_best_hit"
    },
    {
      "name": "Find LGT",
      "executable": "{{BIN_DIR}}/lgt_finder"
    }
  ],
  "converters": {
    "main": [],
    "iterator": []
  },
  "input_modes": {
    "file": false,
    "list": false,
    "directory": false
  },
  "output_formats": [],
  "has_iterator": true,
  "group_count": "150",
  "parameters": [
    {
      "name": "NCBITAX",
      "default": "/local/db/repository/ncbi/blast/20120414_001321/taxonomy/taxdump/"
    },
    {
      "name": "GI2TAX",
      "default": "/local/db/repository/ncbi/blast/20120414_001321/taxonomy/gi_taxid_nucl.dmp"
    },
    {
      "name": "HOST",
      "default": "revan.igs.umaryland.edu:10001"
    },
    {
      "name": "TAXONDB",
      "default": "gi2taxon"
    },
    {
      "name": "TAXONCOLL",
      "default": "gi2taxonnuc"
    },
    {
      "name": "MAPPING_FILE",
      "default": ""
    },
    {
      "name": "HOST_LINEAGE",
      "default": ""
    },
    {
      "name": "DONOR_LINEAGE",
      "default": ""
    },
    {
      "name": "FILTER_LINEAGE",
      "default": ""
    },
    {
      "name": "FILTER_MIN_OVERLAP",
      "default": "50"
    },
    {
      "name": "MIN_LENGTH",
      "default": ""
    },
    {
      "name": "MAX_OVERLAP",
      "default": "0"
    }
  ]
}